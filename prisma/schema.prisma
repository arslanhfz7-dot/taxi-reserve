// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ResStatus {
  PENDING
  ASSIGNED
  COMPLETED
  R_RECEIVED
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String?
  name         String?
  role         Role          @default(USER)
  createdAt    DateTime      @default(now())
  reservations Reservation[]
}

model Reservation {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])

  pickupText  String
  dropoffText String
  pickupLat   Float?
  pickupLng   Float?
  dropoffLat  Float?
  dropoffLng  Float?

  startAt     DateTime
  pax         Int       @default(1)
  priceEuro   Float?
  notes       String?
  driver      String?          // <- simple text field like notes
  status      ResStatus @default(PENDING)
  reminderAt  DateTime?
  createdAt   DateTime  @default(now())

  @@index([userId, startAt])
  @@index([status])
}
