// ---- Prisma schema (SQLite for local dev) ----

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./prisma/dev.db"
}


model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String?
  name         String?
  role         Role          @default(USER)
  createdAt    DateTime      @default(now())
  reservations Reservation[]
}

model Reservation {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  pickupText  String
  dropoffText String
  pickupLat   Float?
  pickupLng   Float?
  dropoffLat  Float?
  dropoffLng  Float?
  startAt     DateTime
  pax         Int       @default(1)
  priceEuro   Float?
  notes       String?
  status      ResStatus @default(PENDING)
  driver      String?   // ðŸ‘ˆ new text field
  reminderAt  DateTime?
  createdAt   DateTime  @default(now())
}

enum ResStatus {
  PENDING
  ASSIGNED
  COMPLETED
  R_RECEIVED
}


enum Role {
  USER
  ADMIN
}
