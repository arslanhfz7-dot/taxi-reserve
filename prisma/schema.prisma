// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ResStatus {
  PENDING
  ASSIGNED
  COMPLETED
  R_RECEIVED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  // Relations
  reservations Reservation[]
  reminders    Reminder[]
}

model Reservation {
  id        String @id @default(cuid())
  userEmail String
  user      User   @relation(fields: [userEmail], references: [email])

  startAt     DateTime
  endAt       DateTime?
  pickupText  String?
  dropoffText String?
  pax         Int       @default(1)
  priceEuro   Float? // <- keep FLOAT to match prod
  notes       String?

  phone  String? @db.VarChar(40)
  flight String? @db.VarChar(40)

  status ResStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reminders Reminder[]
}

model Reminder {
  id        String @id @default(cuid())
  userEmail String
  user      User   @relation(fields: [userEmail], references: [email])

  reservationId String?
  reservation   Reservation? @relation(fields: [reservationId], references: [id])

  title  String
  note   String?
  dueAt  DateTime
  isDone Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userEmail, dueAt])
}
